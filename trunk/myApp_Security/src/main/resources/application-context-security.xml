	<!-- Configure Authentication mechanism -->
	<authentication-manager alias="authenticationManager">
		<!-- DAO Based Security -->
		<authentication-provider>
			<password-encoder hash="md5" />
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="SELECT U.name AS username, U.password as password, U.enabled as enabled FROM user U where U.name=?"
				authorities-by-username-query="SELECT U.name as username, A.name as authority FROM authority A  U.user_id=A.user_id " />
		</authentication-provider>
	</authentication-manager>

</beans:beans>
